<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myandroidlibrary"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="application.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="activity_life.LifeCircle"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="application.FirstActivity"
            android:label="@string/title_activity_first" >
        </activity>
        <activity
            android:name="application.SecondActivity"
            android:label="@string/title_activity_second" >
        </activity>
        <activity
            android:name="network.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="volley.VolleyActivity"
            android:label="@string/title_activity_volley" >
        </activity>
        <activity
            android:name="handler.HandlerActivity"
            android:label="@string/title_activity_handler" >
        </activity>
        <activity android:name="service.SimpleServiceActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="service.BindServiceActivity" >
        </activity>
        <activity
            android:name="service.AidlServiceActivity"
            android:label="@string/title_activity_aidl_service" >
        </activity>

        <service android:name="service.SimpleService" >
            <intent-filter>
                <action android:name="service.SIMPLE_SERVICE" />
            </intent-filter>
        </service>
        <service android:name="service.BindService" >
            <intent-filter>
                <action android:name="service.BIND_SERVICE" />
            </intent-filter>
        </service>
        <service android:name="service.AidlService" >
            <intent-filter>
                <action android:name="service.AIDL_SERVICE" />
            </intent-filter>
        </service>
        <service android:name="service.ForegroundService" >
            <intent-filter>
                <action android:name="service.FOREGROUND_SERVICE" />
            </intent-filter>
        </service>
    </application>

</manifest>